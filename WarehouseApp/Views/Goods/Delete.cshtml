@model WarehouseApp.Models.Goods

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete goods @Html.DisplayFor(model => model.GoodsName)</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <b class="text-danger mb-2">@Html.Raw(TempData["msg"])</b>
    <dl class="dl-horizontal">
        <b>
            Price:
        </b>

        @Html.DisplayFor(model => model.GoodsPrice)
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary mb-2" /> <br />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
