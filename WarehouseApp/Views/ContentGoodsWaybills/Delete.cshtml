@model WarehouseApp.Models.ContentGoodsWaybill

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete content goods in waybill @Html.DisplayFor(model => model.idContentGoodsWaybill)</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <b>
            Quantity of goods:
        </b>
        @Html.DisplayFor(model => model.QuantityGoods)
        <br />
        <b>
            Goods name:
        </b>
        @Html.DisplayFor(model => model.Goods.GoodsName)
        <br />

        <b>
            Waybill number:
        </b>
        @Html.DisplayFor(model => model.Waybill.WaybillNumber)
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary mb-2"/><br />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
